<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            app:srcCompat="@drawable/camera" />
<!--        <Button-->
<!--            android:id="@+id/capture_image_btn"-->
<!--            android:text="Capture Image"-->
<!--            android:layout_marginTop="-5dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plateNum1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Plate Number: *" />

            <EditText
                android:id="@+id/plateNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="italic"
                android:hint="eg: PPP1234"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/typeofCar1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Type of Car: *" />

            <Spinner
                android:id="@+id/carType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameofCar1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Name of Car: *" />

            <EditText
                android:id="@+id/carName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textStyle="italic"
                android:hint="eg: Toyota Camry"
                android:inputType="text"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date10"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Start Date: *" />

            <EditText
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20dp"
                android:focusableInTouchMode="false"
                android:onClick="setDate"
                android:textStyle="italic"
                android:hint="eg: dd/mm/yyyy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date11"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="End Date: *" />

            <EditText
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20dp"
                android:focusableInTouchMode="false"
                android:onClick="setDate1"
                android:textStyle="italic"
                android:hint="eg: dd/mm/yyyy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time10"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Start Time: *" />

            <EditText
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20dp"
                android:focusableInTouchMode="false"
                android:onClick="setTime"
                android:textStyle="italic"
                android:hint="eg: 10:00"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time11"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="End Time: *" />

            <EditText
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20dp"
                android:focusableInTouchMode="false"
                android:onClick="setTime1"
                android:textStyle="italic"
                android:hint="eg: 22:00"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Price (RM): *" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="italic"
                android:hint="eg: 50"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneNum1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Phone Number: *" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="italic"
                android:hint="eg: 0123456789"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Location: " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="* Required"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="Publish" />

            <Button
                android:id="@+id/Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="Back" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

